{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Kaspa Audio Transfer",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "clipboard": {
        "readText": true,
        "writeText": true
      }
    },
    "windows": [
      {
        "title": "Kaspa Audio Transfer",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": []
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.kaspa.audio.transfer",
      "icon": ["icons/icon.ico"]
    }
  }
}
