{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kaspa Data Transfer",
  "version": "0.1.0",
  "identifier": "com.kaspa.data.transfer",
  "build": {
    "beforeBuildCommand": "cargo build --release --manifest-path ../Cargo.toml -p kaspa_audio_transfer",
    "beforeDevCommand": "cargo build --manifest-path ../Cargo.toml -p kaspa_audio_transfer",
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Kaspa Data Transfer",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "resources": ["../../target/release/kaspa_data_transfer.exe"],
    "icon": ["icons/icon_new.ico"]
  }
}
