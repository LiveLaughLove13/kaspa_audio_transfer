:root {
  --kaspa-primary: #70c7ba;
  --kaspa-accent: #49eacb;
  --surface-dark: rgba(15, 21, 30, 0.72);
  --surface-light: rgba(255, 255, 255, 0.92);
  --bg-gradient-start: #0f1319;
  --bg-gradient-mid: #141c26;
  --text-primary: #e8f4f0;
  --text-secondary: #9fbac3;
  --card-border: rgba(112, 199, 186, 0.22);
  --shadow: 0 24px 60px rgba(5, 12, 20, 0.45);
  --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-mid) 100%);
  color: var(--text-primary);
  font-family: var(--font-family);
  -webkit-font-smoothing: antialiased;
  padding: 1em 10%;
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 0.35rem;
}

.field-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 600;
}

.field-input {
  padding: 0.6rem 0.75rem;
  border-radius: 0.5rem;
  border: 1px solid var(--card-border);
  background: var(--surface-dark);
  color: var(--text-primary);
}

.field-input:focus {
  outline: none;
  border-color: var(--kaspa-accent);
  box-shadow: 0 0 0 3px rgba(73, 234, 203, 0.15);
}

@media (min-width: 900px) {
  .form-grid {
    grid-template-columns: 1.2fr 1.2fr 0.7fr 1.3fr;
    align-items: end;
  }
}

.app {
  max-width: 840px;
  margin: 0 auto;
}

.app-header {
  margin-bottom: 1.5rem;
}

.app-header h1 {
  margin: 0 0 0.25rem;
  color: var(--kaspa-accent);
}

.app-header p {
  margin: 0;
  color: var(--text-secondary);
}

.card {
  background: var(--surface-dark);
  border-radius: 0.75rem;
  padding: 1.25rem 1.5rem;
  margin-bottom: 1.5rem;
  box-shadow: var(--shadow);
  border: 1px solid var(--card-border);
}

.drop-zone {
  border: 2px dashed var(--card-border);
  border-radius: 0.75rem;
  padding: 2rem 1.5rem;
  text-align: center;
  cursor: pointer;
  color: var(--text-secondary);
  background: var(--surface-dark);
  transition: border-color 0.15s ease, background-color 0.15s ease, color 0.15s ease;
}

.drop-zone.drag-over {
  border-color: var(--kaspa-accent);
  background-color: rgba(73, 234, 203, 0.1);
  color: var(--kaspa-accent);
}

.file-input {
  display: none;
}

.btn-primary {
  margin-top: 1rem;
  padding: 0.6rem 1.3rem;
  border-radius: 0.5rem;
  border: none;
  background: linear-gradient(135deg, var(--kaspa-accent) 0%, var(--kaspa-primary) 100%);
  color: #03181a;
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  box-shadow: 0 16px 30px rgba(73, 234, 203, 0.35);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 20px 45px rgba(73, 234, 203, 0.45);
}

.btn-primary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
  box-shadow: 0 16px 30px rgba(73, 234, 203, 0.35);
}

.status {
  margin-top: 0.5rem;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.hidden {
  display: none;
}

.result-list {
  margin: 0;
  padding: 0;
}

.result-row {
  display: flex;
  justify-content: space-between;
  gap: 1rem;
  padding: 0.25rem 0;
  font-size: 0.95rem;
}

.result-row dt {
  font-weight: 600;
  color: var(--kaspa-accent);
}

.result-row dd {
  margin: 0;
  text-align: right;
  color: var(--text-primary);
}

.next-steps {
  padding-left: 1.25rem;
}
